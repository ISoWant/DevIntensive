<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_header_172"
    android:paddingTop="@dimen/spacing_medial_24"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:paddingRight="@dimen/spacing_normal_16"
    android:paddingBottom="@dimen/spacing_small_8"
    android:background="@drawable/nav_head_bg">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/size_avatar_normal_60"
        android:layout_height="@dimen/size_avatar_normal_60"
        android:layout_marginTop="@dimen/spacing_normal_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_large_56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_txt"
            style="@style/DrawerHeaderText"
            android:text="Евстифеев Антон"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/user_email_txt"
            style="@style/DrawerHeaderText"
            android:text="a.s.evstifeev@gmail.com"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

</RelativeLayout>