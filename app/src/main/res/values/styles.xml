<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- Icons. Standard size -->
    <style name="icon">
        <item name="android:layout_width">@dimen/size_icon_24</item>
        <item name="android:layout_height">@dimen/size_icon_24</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
    </style>
    <!-- Left icons -->
    <style name="icon.left" parent="icon">
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>
    <!-- Right icons -->
    <style name="icon.right" parent="icon">
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="externalInfoElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
    </style>

    <style name="intoInfoElement">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/size_medium_32</item>
        <item name="android:layout_marginRight">@dimen/size_normal_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Text -->
    <style name="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editInfoText" parent="text">>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="bottomLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size_1</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
    </style>

    <!-- Show progress -->
    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <!-- AppBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- -Drawer header-->
    <style name="DrawerHeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
    </style>

</resources>