<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_icon_24</item>
        <item name="android:layout_height">@dimen/size_icon_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="externalInfoElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
    </style>

    <style name="intoInfoElement">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/size_medium_32</item>
        <item name="android:layout_marginRight">@dimen/size_normal_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editInfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="bottomLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
    </style>

    <style name="InformationBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/size_medium_32</item>
        <item name="android:paddingBottom">@dimen/size_medium_32</item>
    </style>

    <style name="InformationBarElement">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
    </style>

    <style name="InformationBarElement.Side" parent="InformationBarElement">
        <item name="android:layout_weight">0.25</item>
    </style>

    <style name="InformationBarElement.Central" parent="InformationBarElement">
        <item name="android:layout_weight">0.45</item>
    </style>

    <style name="InformationBarSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="InformationBarText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="InformationBarText.Description" parent="InformationBarText">
        <item name="android:textSize">@dimen/font_normal_14</item>
        <item name="android:fontFamily">sans-serif-condensed"</item>
    </style>

    <style name="InformationBarText.Value" parent="InformationBarText">
        <item name="android:textSize">@dimen/spacing_normal_16</item>
    </style>

</resources>